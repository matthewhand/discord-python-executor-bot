# Message and LLM Provider Configuration
MESSAGE_PROVIDER=discord
LLM_PROVIDER=flowise  # Flowise as the selected provider

# Discord Configuration
DISCORD_BOT_TOKEN=your-discord-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=your-discord-guild-id
# Optional: Restrict the bot to a specific channel
DISCORD_CHANNEL_ID=your-discord-channel

# Flowise Configuration
FLOWISE_API_ENDPOINT=http://host.docker.internal:3030/api/v1  # Replace with your Flowise API URL
FLOWISE_CONVERSATION_CHATFLOW_ID=<conversation-chatflow-id>   # ID for multi-turn chat completions
FLOWISE_COMPLETION_CHATFLOW_ID=<completion-chatflow-id>       # ID for single-turn completions
FLOWISE_USERNAME=  # Must match Flowise .env username
FLOWISE_PASSWORD=  # Must match Flowise .env password
